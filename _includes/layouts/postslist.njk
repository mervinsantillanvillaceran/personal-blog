<div class="mt-6">
{% for post in postslist %}
    <div class="sm:w-full md:w-4/5 md:flex">
        <div class="w-full rounded-lg shadow-lg bg-white mb-6 hover:shadow-xl">
            <a href="{{ post.url | url }}">
                <div class="px-6 py-4">
                    <div>
                        <p class="text-sm text-gray-600 flex items-center">
                            <span class="flex-1">{{ post.date | readableDate }}.</span>
                            <span class="flex-1 text-right">{{ post | readingTime }} read</span>
                        </p>
                        <div class="font-bold text-xl mb-2">{{ post.data.title }}</div>
                        <p class="text-gray-700 text-base">
                            {{ post.data.excerpt }}
                        </p>
                    </div>
                    {% if post.data.tags %}
                    <div class="pt-6">
                        {% for item in post.data.tags %}
                            {%- if item != "blog" -%}
                            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">#{{ item }}</span>
                            {%- endif -%}
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </a>
        </div>
    </div>
{% endfor %}
</div>
